.slide_img2 {
  height: 120px;
  width: 100%;
  display: inline-block;
  over-flow: hidden;
}
.ranking_item{
  display: flex;
  padding: 5rpx;
  width: 100%;
  margin-top:30rpx;
  margin-left:20rpx;
  flex-direction: row;
  justify-content: space-between;
}
.ranking_photo{
  width: 20%;
}
.ranking_img{
  width:100%;
  border: 1px solid gainsboro;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
}
.ranking_text{
  width:60%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
}
.ranking_name{
  font-size: 13px;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.ranking_introduction{
  font-size:10px;
  color:grey;
  margin:3px 0;
}
.ranking_no{
  color:red;
  font-size: 13px;
}
.ranking_price{
  margin-left:20rpx;
  color:green;
  font-size:13px;
}
.answer{
  width:20%;
  height:100%;
  display:flex;
  margin-right:50rpx;
  background-color: rgba(0, 128, 0, 0.295);
  margin-top:50rpx;
  justify-content:center;
  border: 0px solid rgba(0, 128, 0, 0.295);
  border-radius: 5px;
  box-shadow: 0px 2px 2px rgba(0, 128, 0, 0.295);
}
.answer_view{
  width:100%;
  display:flex;
  justify-content: center;
  font-size: 30rpx;
}