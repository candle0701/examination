<swiper 
indicator-dots="{{indicatorDots}}"
vertical="{{vertical}}"
autoplay="{{autoplay}}"
interval="{{interval}}"
duration="{{duration}}">
  <block wx:for="{{bannerImgs}}" wx:key="item.id">
    <swiper-item>
      <image src="{{item}}" class="slide_img2" mode='widthFix'/> 
    </swiper-item>
  </block>
</swiper>

<block wx:for="{{rankingList}}" wx:key="item.id">
  <view class="ranking_item">
    <view class="ranking_photo">
      <image class="ranking_img" mode='widthFix' src="{{item.url}}"></image>
    </view>
    <view class="ranking_text">
      <text class="ranking_name">{{item.title}}</text>
      <text class="ranking_introduction">{{item.introduction}}</text>
      <view>
        <text class="ranking_no">{{item.sort}} </text>
        <text class="ranking_price">{{item.price}}</text>
      </view>
    </view>
    <view class="answer">
          <view class="answer_view" bindtap='toAnswer'>答题</view>
    </view>
  </view>
</block>
<view class='tui-countdown-content' wx:for="{{countDownList}}" wx:key="countDownList">
  剩余
  <text class='tui-conutdown-box'>{{item.day}}</text>天
  <text class='tui-conutdown-box'>{{item.hou}}</text>时
  <text class='tui-conutdown-box'>{{item.min}}</text>分
  <text class='tui-conutdown-box tui-countdown-bg'>{{item.sec}}</text>秒
</view>


