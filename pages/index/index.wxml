<swiper 
indicator-dots="{{indicatorDots}}"
vertical="{{vertical}}"
autoplay="{{autoplay}}"
interval="{{interval}}"
duration="{{duration}}">
  <block wx:for="{{bannerImgs}}" wx:key="item.id">
    <swiper-item>
      <image src="{{item}}" class="slide_img2" mode='widthFix'/> 
    </swiper-item>
  </block>
</swiper>

<block wx:for="{{rankingList}}" wx:key="item.id">
  <navigator url="" class="ranking_item">
    <view class="ranking_photo">
      <image class="ranking_img" mode='widthFix' src="{{item.url}}"></image>
    </view>
    <view class="ranking_text">
      <text class="ranking_name">{{item.title}}</text>
      <text class="ranking_introduction">{{item.introduction}}</text>
      <view>
        <text class="ranking_no">{{item.sort}} </text>
        <text class="ranking_price">{{item.price}}</text>
      </view>
    </view>
    <view class="answer">
          <text class="answer_view">答题</text>
    </view>
  </navigator>
</block>


