<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="name_area">
    <view class="name_title">昵称:</view>
    <input class="name_input" name="nickname" placeholder="请输入姓名" />
  </view>
  <view class="sex_area">
    <view class="sex_title">性别:</view>
    <radio-group name="gender" class="sex_content">
      <label>
        <radio value="男" />
        男
      </label>
      <label>
        <radio value="女" />
        女
      </label>
    </radio-group>
  </view>
  <view class="city_area">
    <view class="city__title">省市区:</view>
    <picker
      mode="region"
      bindchange="bindRegionChange"
      value="{{region}}"
      name="province_city_area"
    >
      <view class="city_picker">
        {{region[0]}} {{region[1]}} {{region[2]}}
      </view>
    </picker>
  </view>
  <view class="name_area">
    <view class="name_title">街道:</view>
    <input class="name_input" name="address" placeholder="请输入详细地址" />
  </view>
  <view class="name_area">
    <view class="name_title">电话:</view>
    <input class="name_input" type="number" minlength='11' maxlength="11" name="telephone" placeholder="请输入手机号" />
  </view>
  <view class="city_area">
    <view class="city__title">年龄:</view>
    <picker
      bindchange="bindAgeChange"
      value="{{ageIndex}}"
      range='{{ageArr}}'
      name='age'
    >
      <view class="age_picker">
        {{ageArr[ageIndex]}}
      </view>
    </picker>
  </view>
  <view class="city_area">
    <view class="city__title">年级:</view>
    <picker
      bindchange="bindGradeChange"
      value="{{gradeIndex}}"
      range='{{gradeArr}}'
      name='grade'
    >
      <view class="grade_picker">
        {{gradeArr[gradeIndex]}}
      </view>
    </picker>
  </view>
  <view class="btn-area">
    <button form-type="submit" type="primary">提交</button>
    <button form-type="reset" type="primary">重置</button>
  </view>
</form>